<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="review">
	<select id="selectAll" resultType="ReviewDto">
		select * from review
	</select>
	<select id="selectUser" resultType="ReviewDto">
		select * from review where email=#{email}
	</select>
	
	<insert id="insertLike">
		insert into like(reviewid, userid) values(#{reviewid}, #{userid})
	</insert>
	<delete id="deleteLike">
		delete from like where userid=#{userid} and reviewid=#{reviewid}
	</delete>
	<select id="searchLike" resultType="LikeDto">
		select * from like where userid=#{userid} and reviewid=#{reviewid}
	</select>
</mapper>
